<?xml version="1.0" encoding="utf-8"?>





<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity"
    android:orientation="vertical">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="24sp"
                android:text="библиотека"
                android:textColor="@color/purple_500"
                android:padding="5dp"/>


            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="удалить книгу"
                android:layout_margin="5dp"
                android:id="@+id/del"
                android:layout_below="@+id/book_list"/>
    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="показать информацию"
        android:layout_margin="5dp"
        android:id="@+id/information"
        />
            <Button
                android:id="@+id/add"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="добавить книгу"
                android:layout_margin="5dp"
                android:layout_below="@+id/book_list"
                android:layout_toRightOf="@+id/del"
                android:layout_alignParentRight="true"/>
    <Button
        android:id="@+id/search"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="найти книгу"
        android:layout_margin="5dp"
        android:layout_below="@+id/book_list"
        android:layout_toRightOf="@+id/del"
        android:layout_alignParentRight="true"/>

            <EditText
                android:id="@+id/name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="название книги которое хотите добавить/удалмть"/>
            <EditText
                android:id="@+id/author"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="автор книги"/>
    <EditText
        android:id="@+id/year"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="год издания книги"/>
    <EditText
        android:id="@+id/genre"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="жанр"/>

    <ListView
        android:id="@+id/book_list"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />


</LinearLayout>
